@model DbFirstCRUD.Data.Entities.Employees

<h2>Edit Employee</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="EmployeeId" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span> <!-- Validation message -->
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span> <!-- Validation message -->
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId" class="control-label"></label>
        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments">
            <option disabled selected>Please select Department</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span> <!-- Validation message -->
    </div>

    <div class="form-group">
        <label asp-for="DesignationId" class="control-label"></label>
        <select asp-for="DesignationId" class="form-control" asp-items="ViewBag.Designations">
            <option disabled selected>Please select Designation</option>
        </select>
        <span asp-validation-for="DesignationId" class="text-danger"></span> <!-- Validation message -->
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<!-- Validation Scripts -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
