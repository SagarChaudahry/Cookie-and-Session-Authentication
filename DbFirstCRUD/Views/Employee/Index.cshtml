@model IEnumerable< DbFirstCRUD.Data.Entities.Employees>
<h1>Employee List</h1>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Designation</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.DepartmentName</td>
                <td>@employee.DesignationName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@employee.EmployeeId">View</a>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeId">Edit</a>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.EmployeeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Add New Employee</a>