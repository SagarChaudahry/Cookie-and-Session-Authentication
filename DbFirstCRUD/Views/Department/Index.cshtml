
@model IEnumerable<Department>

<h1>Departments</h1>

<table class="table">
    <thead>
        <tr>
            <th>Department ID</th>
            <th>Department Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.DepartmentId</td>
                <td>@department.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@department.DepartmentId">View</a>
                    <a asp-action="Edit" asp-route-id="@department.DepartmentId">Edit</a>
                    <a asp-action="Delete" asp-route-id="@department.DepartmentId" onclick="return confirm('Are you sure you want to delete this department?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Department</a>
