@model DbFirstCRUD.Data.Entities.Designation

<h2>Edit Designation</h2>

<form asp-controller="Designation" asp-action="UpdateDesignation" method="post">
    <input type="hidden" asp-for="DesignationId" />
    <div class="form-group">
        <label asp-for="DesignationName"></label>
        <input asp-for="DesignationName" class="form-control" required />
        <span asp-validation-for="DesignationName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
