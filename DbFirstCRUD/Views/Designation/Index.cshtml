@model IEnumerable<DbFirstCRUD.Data.Entities.Designation>
<h1>Designations</h1>

<table class="table">
    <thead>
        <tr>
            <th>Designation ID</th>
            <th>Designation Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var designation in Model)
        {
            <tr>
                <td>@designation.DesignationId</td>
                <td>@designation.DesignationName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@designation.DesignationId">View</a>
                    <a asp-action="Edit" asp-route-id="@designation.DesignationId">Edit</a>
                    <a asp-action="Delete" asp-route-id="@designation.DesignationId" onclick="return confirm('Are you sure you want to delete this designation?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Designation</a>
